# ==========================================
# Font Settings
# ==========================================
font_size 18.0
# BEGIN_KITTY_FONTS
font_family      family="Iosevka Term"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS

# Disable ligatures only when the cursor is over them (great for code editing)
disable_ligatures cursor

# ==========================================
# UI & Core Settings
# ==========================================
enable_audio_bell no
visual_bell_duration 0.0

# Cleaner aesthetic by hiding title bars
hide_window_decorations titlebar-only 
window_padding_width 4

# ==========================================
# Layouts
# ==========================================
# Kitty defaults to 'fat' and 'tall' layouts. To get true tmux-like 
# vertical and horizontal splits, we need to explicitly enable 'splits'.
enabled_layouts splits, stack

# ==========================================
# Tmux-like Keybindings (Leader: Ctrl+A)
# ==========================================
# Note: If you run actual `tmux` inside Kitty and also use `Ctrl+A` as your 
# tmux prefix, Kitty will intercept these keystrokes. 

# Tab Management
map ctrl+a>c new_tab
map ctrl+a>1 goto_tab 1
map ctrl+a>2 goto_tab 2
map ctrl+a>3 goto_tab 3
map ctrl+a>4 goto_tab 4
map ctrl+a>5 goto_tab 5 
map ctrl+a>6 goto_tab 6
map ctrl+a>7 goto_tab 7
map ctrl+a>8 goto_tab 8
map ctrl+a>9 goto_tab 9
map ctrl+a>0 goto_tab 10

# Window Management (Splits)
# Changed generic `new_window` to specific directional splits
map ctrl+a>v launch --location=vsplit
map ctrl+a>s launch --location=hsplit
map ctrl+a>x close_window

# Window Navigation
map ctrl+a>l neighboring_window right
map ctrl+a>j neighboring_window bottom
map ctrl+a>h neighboring_window left
map ctrl+a>k neighboring_window top

# Window Moving
map ctrl+a>shift+h move_window left
map ctrl+a>shift+j move_window bottom
map ctrl+a>shift+k move_window top
map ctrl+a>shift+l move_window right

# Toggle Zoom (Stack layout)
map ctrl+a>z toggle_layout stack

# ==========================================
# Theme
# ==========================================
# BEGIN_KITTY_THEME
# Catppuccin-Mocha
include current-theme.conf
# END_KITTY_THEME
