[general]
status_path = "~/.vdirsyncer/status/"


[pair my_contacts]
a = "my_contacts_local"
b = "my_contacts_remote"
collections = ["from a", "from b"]
conflict_resolution =["command", "nvim -d"]


[pair my_contacts_uchicago]
a = "my_contacts_local_uchicago"
b = "my_contacts_remote_uchicago"
collections = ["from a", "from b"]
conflict_resolution =["command", "nvim -d"]

[pair my_cal]
a = "google_calendar"
b = "cal_local"
collections = ["from a", "from b"]
conflict_resolution =["command", "nvim -d"]
metadata = ["color"]

[pair my_cal_uchicago]
a = "google_calendar_uchicago"
b = "cal_local_uchicago"
collections = ["laparisidelannoy@uchicago.edu"]
conflict_resolution =["command", "nvim -d"]
metadata = ["color"]

[storage my_contacts_local]
type = "filesystem"
path = "~/.contacts/google/"
fileext = ".vcf"

[storage my_contacts_local_uchicago]
type = "filesystem"
path = "~/.contacts/uchicago/"
fileext = ".vcf"

[storage cal_local]
type = "filesystem"
path = "~/.calendar/google"
fileext = ".ics"


[storage cal_local_uchicago]
type = "filesystem"
path = "~/.calendar/uchicago"
fileext = ".ics"

[storage my_contacts_remote]
type = "google_contacts"
token_file = "~/.config/vdirsyncer/google"
client_id.fetch = ["command", "pass", "client_id"]
client_secret.fetch =["command", "pass", "client_secret"]

[storage my_contacts_remote_uchicago]
type = "google_contacts"
token_file = "~/.config/vdirsyncer/uchicago"
client_id.fetch = ["command", "pass", "client_id_uchicago"]
client_secret.fetch =["command", "pass", "client_secret_uchicago"]

[storage google_calendar]
type = "google_calendar"
token_file = "~/.config/vdirsyncer/google_cal"
client_id.fetch = ["command", "pass", "client_id"]
client_secret.fetch =["command", "pass", "client_secret"]

[storage google_calendar_uchicago]
type = "google_calendar"
token_file = "~/.config/vdirsyncer/google_cal_uchicago"
client_id.fetch = ["command", "pass", "client_id_uchicago"]
client_secret.fetch =["command", "pass", "client_secret_uchicago"]

