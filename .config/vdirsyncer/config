[general]
status_path = "~/.vdirsyncer/status/"


[pair my_contacts]
a = "my_contacts_local"
b = "my_contacts_remote"
collections = ["from a", "from b"]
conflict_resolution =["command", "vimdiff"]


[pair my_contacts_uchicago]
a = "my_contacts_local_uchicago"
b = "my_contacts_remote_uchicago"
collections = ["from a", "from b"]
conflict_resolution =["command", "vimdiff"]

[storage my_contacts_local]
type = "filesystem"
path = "~/.contacts/google/"
fileext = ".vcf"

[storage my_contacts_local_uchicago]
type = "filesystem"
path = "~/.contacts/uchicago/"
fileext = ".vcf"

[storage my_contacts_remote]
type = "google_contacts"
token_file = "~/.config/vdirsyncer/google"
client_id.fetch = ["command", "pass", "leoaparisi@gmail.com/client/client_id"]
client_secret.fetch =["command", "pass", "leoaparisi@gmail.com/client/client_secret"]

[storage my_contacts_remote_uchicago]
type = "google_contacts"
token_file = "~/.config/vdirsyncer/uchicago"
client_id.fetch = ["command", "pass", "laparisidelannoy@uchicago.edu/client/client_id"]
client_secret.fetch = ["command", "pass", "laparisidelannoy@uchicago.edu/client/client_secret"]
