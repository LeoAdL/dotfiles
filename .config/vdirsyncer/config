[general]
status_path = "~/.vdirsyncer/status/"


[pair my_contacts]
a = "my_contacts_local"
b = "my_contacts_remote"
collections = ["from a", "from b"]
conflict_resolution =["command", "nvimdiff"]

[pair my_cal]
a = "google_calendar"
b = "cal_local"
collections = ["from a", "from b"]
conflict_resolution =["command", "nvimdiff"]
metadata = ["color"]

[storage my_contacts_local]
type = "filesystem"
path = "~/.contacts/google/"
fileext = ".vcf"

[storage cal_local]
type = "filesystem"
path = "~/.calendar/google"
fileext = ".ics"


[storage my_contacts_remote]
type = "google_contacts"
token_file = "~/.config/vdirsyncer/google"
client_id.fetch = ["command", "pass", "client_id"]
client_secret.fetch =["command", "pass", "client_secret"]

[storage google_calendar]
type = "google_calendar"
token_file = "~/.config/vdirsyncer/google_cal"
client_id.fetch = ["command", "pass", "client_id"]
client_secret.fetch =["command", "pass", "client_secret"]

