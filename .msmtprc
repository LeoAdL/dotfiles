# Set default values for all the accounts.
defaults
logfile ~/.maildir/msmtp.log
tls_trust_file ~/.maildir/certificates/root-certificates.pem

# ======================================================================

account gmail
auth on
host smtp.gmail.com
port 465
protocol smtp
from leoaparisi@gmail.com
user leoaparisi@gmail.com
passwordeval "security find-generic-password -s mu4e-gmail -a leoaparisi@gmail.com -w"
tls on
tls_starttls off
# ======================================================================

account UChicago
auth plain
host localhost
port 1025
protocol smtp
from laparisidelannoy@uchicago.edu
user laparisidelannoy@uchicago.edu
passwordeval "security find-generic-password -s mu4e-UChicago -a laparisidelannoy@uchicago.edu -w"
tls off
tls_starttls off

account default : gmail

